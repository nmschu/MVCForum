@{
    ViewBag.Title = "Adventure Time - Home";
}


<html>
    <head>
        <title>
            Welcome
        </title>
    </head>
    <body style=background-color:#222222;>

    <!--Beginning carousel-->
        <div class="container" align="center">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img class="img-responsive center-block" src="~/Content/Images/dragon.jpg" alt="dragon" />
                        <div class="carousel-caption">
                            <h5>Information for the dragon page</h5>
                        </div>
                    </div>
                    <div class="item">
                        <img class="img-responsive center-block" src="~/Content/Images/rickandmorty.jpg" alt="rickandmorty" />
                        <div class="carousel-caption">
                            <h5>Information for the rick and morty page</h5>
                        </div>
                    </div>
                    <div class="item">
                        <img class="img-responsive center-block" src="~/Content/Images/gitgud.jpg" alt="gitgud" />
                        <div class="carousel-caption">
                            <h5>Information for the Git Gud page</h5>
                        </div>
                    </div>
                    <div class="item">
                        <img class="img-responsive center-block" src="~/Content/Images/pirateship.jpg" alt="pirate" />
                        <div class="carousel-caption">
                            <h5>Information for the pirate page</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End of carousel-->
        <br />

        <!--The start adventure button-->
        <div style="text-align:center">
            <div class="btn btn-danger btn-lg">
                @Html.ActionLink("Begin your adventure", "Story", "Story", null, new { style = "color:snow" })
            </div>
        </div>
        <div class="container" style="border:none">
            <div class="col-md-4">
                <div>@Html.ActionLink("Story Content Manager", "List", "Story")</div><br />
                <div>@Html.ActionLink("Paragragh Content Manager", "Index", "Paragraph")</div>
            </div>
        </div>
    </body>
</html>

